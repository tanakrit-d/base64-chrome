{
    "manifest_version": 3,
    "name": "Base64 Encoder/Decoder",
    "version": "1.0",
    "description": "Encode and decode selected text to/from base64 within the clipboard",
    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "offscreen"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {},
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}